</div>


<style>

.header {
  min-width: 100vw;
  min-height: 5vh;
  color: var(--text-color);
  margin-top: 6em;
}

.outer-container {
  margin-top: -5%;
  padding: 0;
  /* border: 1px solid red; */
}

a {
  text-decoration: none;
}

.resources-page-container :global(.case-studies),
.resources-page-container :global(.blog) {
  width: 100%;
  max-width: 1400px;
  margin-left: auto;
  margin-right: auto;
}

.header nav ul {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 3em;
  margin-left: 5%;
}

.header nav ul li {
  list-style: none;
  font-size: 1.5rem;
}

.header nav ul li a {
  text-decoration: none;
  color: var(--text-color);
}

.section-heading {
  margin-bottom: 1em;
  color: var(--description-text);
}

.resources-container {
  margin-top: 2.5em;
  margin-inline: 5%;
  min-width: auto;
  /* border: 1px solid red; */
}

.featured-article {
  width: 100%;
  height: 100%;
  max-width: 100%;
}

.article-card {
  width: 100%;
  border: 1px solid gray;
  padding: 1em;
}

.article-card-image img {
  width: 100%;
  height: 100%;
  border-radius: 10px;
  object-fit: cover;
  padding-bottom: 1em;
}

.article-desc {
  margin-block: 1em;
}

.article-desc p {
  margin-bottom: 2em;
}

.articles-heading {
  color: var(--description-text);
}

.article-desc h3 {
  font-size: 1.8em;
  color: var(--description-text);
  margin-bottom: .5em;
}

.all-articles {
  margin-top: 2em;
  min-width: fit-content;
}

.all-articles-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-inline: 1em;
}

.all-articles-header a {
  color: var(--text-color);
}

.all-articles-container {
  margin-inline: 1em;
  margin-top: 2em;
  max-width: 100%;
  /* border: 1px solid red; */
}

.all-articles-container ul {
  display: flex;
  flex-direction: column;
  gap: 1em;
  padding: 0;
}

.all-articles-container ul a {
  text-decoration: none;
  color: var(--text-color);
}

.all-articles-container ul li {
  list-style: none;
}

.all-articles-container ul .article-card {
  margin-top: 0;
  border: none;
  padding: 1em;
  /* max-width: 90%; */
  /* border: 1px solid red; */
}

.all-articles-container ul .article-card:hover {
  border: 1px solid #00ABC8;
  cursor: pointer;
  border-radius: 10px;
}

.all-articles-container ul .article-card .article-details {
  margin-bottom: 1em;
}

.all-articles-container ul .article-card h3 {
  font-size: 1.5rem;
  color: var(--description-text);
}

.span-author {
  color: #FAA51A;
}

/* Responsive Design */

@media screen and (min-width: 1200px) {
  .resources-container {
  display: flex;
  gap: 2em;
  margin-inline: 5%;
  max-width: 80%;
  /* max-height: 80vh; */
  /* border: 1px solid red; */
}

.all-articles {
  margin-top: -.1em;
  /* border: 1px solid red; */
  max-width: 50%;
}


}


</style>